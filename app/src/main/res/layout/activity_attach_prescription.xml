<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".activities.AttachPrescriptionActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/con_toolbar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:padding="@dimen/dp_15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/back_arrow" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/circularstd_bold"
                android:gravity="center"
                android:text="@string/attach_prescription"
                android:textAllCaps="true"
                android:textColor="@color/black_txt"
                android:textSize="@dimen/sp_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:background="@color/bg_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/con_toolbar" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/circularstd_medium"
            android:text="@string/upload"
            android:textAllCaps="true"
            android:textColor="@color/grey_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline6"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/dp_16" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/dp_16" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_upload_img_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:fontFamily="@font/circularstd_book"
            android:text="@string/upload_img_txt1"
            android:textColor="@color/black_txt"
            android:textSize="@dimen/sp_15"
            app:layout_constraintEnd_toStartOf="@+id/guideline_end"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline6"
            app:layout_constraintTop_toBottomOf="@+id/txt_upload" />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            app:layout_constraintEnd_toStartOf="@+id/img_gallery"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_upload_img_txt"
            app:srcCompat="@drawable/upload_camera" />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_e_prescri_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/img_gallery"
            app:layout_constraintTop_toBottomOf="@+id/txt_upload_img_txt"
            app:srcCompat="@drawable/upload_folder" />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            app:layout_constraintEnd_toStartOf="@+id/img_e_prescri_folder"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/img_camera"
            app:layout_constraintTop_toBottomOf="@+id/txt_upload_img_txt"
            app:srcCompat="@drawable/upload_gallery" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:fontFamily="@font/circularstd_book"
            android:text="@string/camera"
            android:textColor="@color/black_txt"
            android:textSize="@dimen/sp_15"
            app:layout_constraintEnd_toEndOf="@+id/img_camera"
            app:layout_constraintStart_toStartOf="@+id/img_camera"
            app:layout_constraintTop_toBottomOf="@+id/img_camera" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/circularstd_book"
            android:text="@string/gallery"
            android:textColor="@color/black_txt"
            android:textSize="@dimen/sp_15"
            app:layout_constraintBottom_toBottomOf="@+id/txt_camera"
            app:layout_constraintEnd_toEndOf="@+id/img_gallery"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/img_gallery"
            app:layout_constraintTop_toTopOf="@+id/txt_camera"
            app:layout_constraintVertical_bias="1.0" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_e_prescri_folder"
            android:layout_width="138dp"
            android:layout_height="44dp"
            android:fontFamily="@font/circularstd_book"
            android:minLines="2"
            android:text="@string/e_prscri_folder"
            android:textAlignment="center"
            android:textColor="@color/black_txt"
            android:textSize="@dimen/sp_15"
            app:layout_constraintBottom_toBottomOf="@+id/txt_gallery"
            app:layout_constraintEnd_toEndOf="@+id/img_e_prescri_folder"
            app:layout_constraintHorizontal_bias="0.468"
            app:layout_constraintStart_toStartOf="@+id/img_e_prescri_folder"
            app:layout_constraintTop_toTopOf="@+id/txt_gallery"
            app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_confirm_medicin_qnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:background="@color/colorAccent"
            android:enabled="false"
            android:fontFamily="@font/circularstd_bold"
            android:text="@string/set_medicine_guantity"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/bg_color"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toTopOf="@+id/btn_confirm_medicin_qnt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_e_prescri_folder"
            app:layout_constraintVertical_bias="0.0">


        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_add"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/no_order"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.25" />

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_cancel"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end"
                android:src="@drawable/img_cancel"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/img_add"
                app:layout_constraintEnd_toEndOf="@+id/img_add"
                app:layout_constraintStart_toEndOf="@+id/img_add"
                app:layout_constraintTop_toTopOf="@+id/img_add" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>