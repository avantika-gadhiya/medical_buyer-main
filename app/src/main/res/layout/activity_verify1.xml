<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".loginactivities.Verify1Activity">


    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="39dp" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="39dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/con_toolbar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="@dimen/toolbar_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:padding="@dimen/dp_15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/back_arrow" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/circularstd_medium"
            android:text="@string/verify_num"
            android:textAllCaps="true"
            android:textColor="@color/black_txt"
            android:textSize="@dimen/sp_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/con_toolbar" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:fontFamily="@font/circularstd_book"
            android:text="@string/verify_txt1"
            android:textColor="@color/black_txt"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/txt_title" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/circularstd_book"
            android:text="+91 1234 56789"
            android:textColor="@color/black_txt"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/txt1" />

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_otp_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_45"
            android:background="@drawable/otp_box_empty"
            android:focusable="true"
            android:fontFamily="@font/circularstd_book"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black_txt"
            android:textSize="@dimen/sp_18"
            app:layout_constraintEnd_toStartOf="@+id/edt_otp_2"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/txt_num" />

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_otp_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_45"
            android:background="@drawable/otp_box_empty"
            android:fontFamily="@font/circularstd_book"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black_txt"
            android:textSize="@dimen/sp_18"
            app:layout_constraintEnd_toStartOf="@+id/edt_otp_3"
            app:layout_constraintStart_toEndOf="@+id/edt_otp_1"
            app:layout_constraintTop_toBottomOf="@id/txt_num" />

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_otp_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_45"
            android:background="@drawable/otp_box_empty"
            android:fontFamily="@font/circularstd_book"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black_txt"
            android:textSize="@dimen/sp_18"
            app:layout_constraintEnd_toStartOf="@+id/edt_otp_4"
            app:layout_constraintStart_toEndOf="@+id/edt_otp_2"
            app:layout_constraintTop_toBottomOf="@+id/txt_num" />

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_otp_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_45"
            android:background="@drawable/otp_box_empty"
            android:fontFamily="@font/circularstd_book"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black_txt"
            android:textSize="@dimen/sp_18"
            app:layout_constraintEnd_toStartOf="@+id/edt_otp_5"
            app:layout_constraintStart_toEndOf="@+id/edt_otp_3"
            app:layout_constraintTop_toBottomOf="@+id/txt_num" />

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_otp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_45"
            android:background="@drawable/otp_box_empty"
            android:fontFamily="@font/circularstd_book"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black_txt"
            android:textSize="@dimen/sp_18"
            app:layout_constraintEnd_toStartOf="@+id/edt_otp_6"
            app:layout_constraintStart_toEndOf="@id/edt_otp_4"
            app:layout_constraintTop_toBottomOf="@+id/txt_num" />

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_otp_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_45"
            android:background="@drawable/otp_box_empty"
            android:fontFamily="@font/circularstd_book"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black_txt"
            android:textSize="@dimen/sp_18"
            app:layout_constraintEnd_toEndOf="@+id/guideline_end"
            app:layout_constraintStart_toEndOf="@id/edt_otp_5"
            app:layout_constraintTop_toBottomOf="@+id/txt_num" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_45"
            android:background="@drawable/login_btn"
            android:fontFamily="@font/circularstd_bold"
            android:text="@string/verify"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toTopOf="@+id/text_resend"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_otp_5" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/circularstd_medium"
            android:padding="@dimen/dp_10"
            android:text="@string/resend_code"
            android:textAllCaps="true"
            android:textColor="@color/black_txt"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_verify" />

    <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>