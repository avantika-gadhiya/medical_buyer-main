<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".activities.StoreOrderAcceptedActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/dp_16" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:padding="@dimen/dp_15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back_arrow" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_8"
            android:fontFamily="@font/circularstd_medium"
            android:text=""
            android:textColor="@color/black_txt"
            android:textSize="@dimen/sp_16"
            app:layout_constraintStart_toEndOf="@+id/img_back"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_8"
            android:fontFamily="@font/circularstd_book"
            android:text=""
            android:textColor="@color/grey_txt"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_back"
            app:layout_constraintTop_toBottomOf="@+id/txt_id" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_16"
            android:background="@drawable/custom_status"
            android:backgroundTint="@color/bg_color_txt"
            android:fontFamily="@font/circularstd_book"
            android:text=""
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_status1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:background="@drawable/custom_status"
            android:backgroundTint="@color/grey_txt"
            android:fontFamily="@font/circularstd_book"
            android:text=""
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_10"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_status"
            app:layout_constraintEnd_toStartOf="@+id/txt_status" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/bg_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/con_toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="true"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_e"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/guideline_s"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_10">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:fontFamily="@font/circularstd_bookitalic"
                android:gravity="center"
                android:text="@string/waiting_for_store_offer"
                android:textColor="@color/colorAccent"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_order_invoicd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:fontFamily="@font/circularstd_medium"
                android:gravity="center"
                android:text="@string/ur_order_has_been_invoiced"
                android:textColor="@color/green_txt"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_awaiting_stor_invoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:drawableStart="@drawable/waiting_invoice"
                android:drawablePadding="@dimen/dp_5"
                android:fontFamily="@font/circularstd_medium"
                android:gravity="center"
                android:text="@string/awaiting_ur_stor_invoice"
                android:textColor="@color/colorAccent"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_recivd_ofr_frm_stor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:drawableStart="@drawable/payment_success_icon"
                android:drawablePadding="@dimen/dp_5"
                android:fontFamily="@font/circularstd_medium"
                android:gravity="center"
                android:text="@string/u_have_receive_ofer_frm_stor"
                android:textColor="@color/green_txt"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/constraint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16"
                app:cardCornerRadius="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_order_status">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/dp_10"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/img_item"
                        android:layout_width="@dimen/store_img_size"
                        android:layout_height="@dimen/store_img_size"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        app:cardCornerRadius="5dp"
                        app:layout_constraintBottom_toTopOf="@+id/constraint1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_goneMarginBottom="@dimen/dp_10">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_store"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/availablestore_img" />
                    </androidx.cardview.widget.CardView>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_stor_nm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_16"
                        android:fontFamily="@font/circularstd_book"
                        android:text=""
                        android:textColor="@color/black_txt"
                        android:textSize="@dimen/sp_16"
                        app:layout_constraintStart_toEndOf="@+id/img_item"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_stor_add"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:drawableTint="@color/colorAccent"
                        android:text=""
                        android:textColor="@color/grey_txt"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintBottom_toTopOf="@+id/constraint1"
                        app:layout_constraintEnd_toStartOf="@+id/img_store_detail"
                        app:layout_constraintStart_toStartOf="@+id/txt_stor_nm"
                        app:layout_constraintTop_toBottomOf="@+id/txt_stor_nm"
                        app:layout_constraintVertical_bias="0.0" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_store_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:padding="@dimen/dp_10"
                        android:src="@drawable/right_arrow_grey"
                        app:layout_constraintBottom_toTopOf="@+id/constraint1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraint1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:background="@drawable/custom_status"
                        android:backgroundTint="@color/bg_color"
                        android:visibility="visible"
                        app:layout_constraintBottom_toTopOf="@+id/constrain_delivry_time_out_OM"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/img_item"
                        app:layout_goneMarginBottom="@dimen/dp_16">


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/del_pref_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:fontFamily="@font/circularstd_medium"
                            android:text=""
                            android:textColor="@color/black_txt"
                            android:textSize="@dimen/sp_14"
                            app:layout_constraintEnd_toStartOf="@+id/txt_view_offer"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_view_offer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/circularstd_medium"
                            android:padding="@dimen/dp_5"
                            android:text="@string/view_offer"
                            android:textColor="@color/colorAccent"
                            app:layout_constraintBaseline_toBaselineOf="@+id/del_pref_type"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/rel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_16"
                            android:layout_marginBottom="@dimen/dp_5"
                            app:layout_constraintEnd_toStartOf="@+id/rel_2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/del_pref_type">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/img_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:paddingEnd="@dimen/dp_5"
                                android:src="@drawable/offer_date"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txt_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/img_date"
                                android:fontFamily="@font/circularstd_book"
                                android:gravity="center"
                                android:text="@string/delivery_date"
                                android:textColor="@color/grey_txt"
                                android:textSize="@dimen/sp_12"
                                app:layout_constraintStart_toEndOf="@+id/img_date"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txt_price_date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/circularstd_book"
                                android:text=""
                                android:paddingStart="1dp"
                                android:gravity="start"
                                android:textColor="@color/black_txt"
                                android:textSize="@dimen/sp_13"
                                app:layout_constraintStart_toStartOf="@id/txt_1"
                                app:layout_constraintTop_toBottomOf="@+id/txt_1" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txt_price_to_date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/circularstd_book"
                                android:text=""
                                android:gravity="start"
                                android:textColor="@color/black_txt"
                                android:textSize="@dimen/sp_13"
                                app:layout_constraintStart_toStartOf="@id/txt_1"
                                app:layout_constraintTop_toBottomOf="@+id/txt_price_date" />
                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/rel_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_16"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/rel"
                            app:layout_constraintTop_toBottomOf="@+id/del_pref_type">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/img_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:paddingEnd="@dimen/dp_5"
                                android:src="@drawable/offer_time"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txt_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/img_time"
                                android:fontFamily="@font/circularstd_book"
                                android:text="@string/delivery_time"
                                android:textColor="@color/grey_txt"
                                android:textSize="@dimen/sp_12"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toEndOf="@+id/img_time"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txt_price_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txt_2"
                                app:layout_constraintTop_toBottomOf="@+id/txt_2"
                                android:layout_toEndOf="@+id/img_time"
                                android:fontFamily="@font/circularstd_book"
                                android:text=""
                                android:textColor="@color/black_txt"
                                android:textSize="@dimen/sp_13"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="@+id/txt_2" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/rel_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_16"
                            app:layout_constraintTop_toTopOf="@+id/rel_1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/del_pref_type">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txt_prcntg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/circularstd_book"
                                android:text="10 % OFF"
                                android:textColor="@color/red_txt"
                                android:textSize="@dimen/sp_12"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txt_price_rs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txt_prcntg"
                                android:fontFamily="@font/circularstd_bold"
                                android:text=""
                                android:textColor="@color/green_txt"
                                android:textSize="@dimen/sp_14"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="@id/txt_prcntg"
                                app:layout_constraintTop_toBottomOf="@+id/txt_prcntg" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constrain_delivry_time_out_OM"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@color/grey_btn"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/dp_10"
                        app:layout_constraintTop_toBottomOf="@id/constraint1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewtop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_10"
                            android:fontFamily="@font/circularstd_book"
                            android:text="@string/delivery_time_out"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/sp_14"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewbottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_16"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:fontFamily="@font/circularstd_book"
                            android:text="@string/you_cant_make_ofer_now"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/sp_14"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textViewtop" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <View
                        android:id="@+id/view2"
                        android:layout_width="0dp"
                        android:layout_height="1.5dp"
                        android:background="@color/bg_color"
                        android:visibility="gone"
                        app:layout_constraintBottom_toTopOf="@+id/view3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/constrain_delivry_time_out_OM" />

                    <RelativeLayout
                        android:id="@+id/rel_price_reorder"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/rel_price_accept"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view2">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/re_order_icon"
                            android:drawablePadding="@dimen/dp_5"
                            android:fontFamily="@font/circularstd_medium"
                            android:gravity="center"
                            android:text="@string/txt_reorder"
                            android:textAllCaps="true"
                            android:textColor="@color/colorAccent" />
                    </RelativeLayout>


                    <View
                        android:id="@+id/view3"
                        android:layout_width="1.5dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:background="@color/bg_color"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/rel_price_accept"
                        app:layout_constraintStart_toEndOf="@+id/rel_price_reorder"
                        app:layout_constraintTop_toBottomOf="@+id/view2" />

                    <RelativeLayout
                        android:id="@+id/rel_price_accept"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/rel_price_reorder"
                        app:layout_constraintTop_toBottomOf="@+id/view2">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_accept"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/accept_icon"
                            android:drawablePadding="@dimen/dp_5"
                            android:fontFamily="@font/circularstd_medium"
                            android:gravity="center"
                            android:padding="@dimen/dp_5"
                            android:text="@string/accept"
                            android:textAllCaps="true"
                            android:textColor="@color/green_txt" />
                    </RelativeLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/constraint3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:visibility="gone"
                app:cardCornerRadius="5dp"
                app:layout_constraintBottom_toTopOf="@+id/constraint2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraint">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_view_invoice"
